@model eTickets.Models.Movie

<h2>Delete Movie</h2>

<div>
    <h4>Are you sure you want to delete this movie?</h4>
    <h5>@Model.Name</h5>
    <div>
        @Model.Description
    </div>
    <div>
        Price: @Model.Price
    </div>
    <div>
        Start Date: @Model.StartDate
    </div>
    <div>
        End Date: @Model.EndDate
    </div>
    <div>
        Image URL: @Model.ImageURL
    </div>
</div>

<div class="form-actions">
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        @*@Html.AntiForgeryToken()*@ <!-- Optional, but recommended to protect against Cross-Site Request Forgery (CSRF) attacks -->
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
@section Scripts{
    <script>
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}
